<div class="container" id="game_card">
  <div><%= @deck.name %></div>
  <% @deck.cards.shuffle.each_with_index do |card, i| %>
  <div class="hidden">
    <div id="definition_<%= i %>"><%= card.definition %></div>
    <div class="answers">
       <% multiple_choice_answers(card).each do |card| %>
       <div id="answer_<%= i %>"><%= card.answer %></div>
       <% end %>
    </div> 
    <input type="hidden" value="<%= card.id %>"/>
  </div>
  <% end %>
</div>
